@model IEnumerable<UniversityManagementSystem.Models.EntityModels.HR.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
<button class="btn btn-success bg-info" onclick="location.href='@Url.Action("Create", "Departments")'"><i class="fas fa-plus"></i> Add New  </button>
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="text-center">
            @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-success"}) |
            @Html.ActionLink("Details", "Details", new {id = item.Id}, new {@class = "btn btn-info"}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {@class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
